<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate Configuration DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-mapping>
<class name="Role" table="role_table">
<id name="id" type="int">
<generator class="native"/>
</id>
<bag table="employee_role" name="employees" fetch="select" cascade="save-update">
<key column="role_id"/>
<many-to-many column="employee_id" class="Employee"/>
</bag>
<property name= "name" column = "name" />
</class>
</hibernate-mapping>

