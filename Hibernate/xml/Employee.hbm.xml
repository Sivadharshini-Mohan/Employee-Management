<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate Configuration DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-mapping>
<class name="Employee" table="employee_table">
<id name="employeeId" type="int">
<generator class="increment"/>
</id>
<bag table="employee_role" name="roles" fetch="select" cascade="all">
<key column="employee_id"/>
<many-to-many class="Role" column="role_id"/>
</bag>
<property name= "name" column = "name" />
<property name = "email" column = "email_id" />
<property name = "dob" column = "date_of_birth" />
<property name = "gender" column = "gender" />
<property name = "mobileNumber" column = "mobile_number" />
<property name = "doj" column = "date_of_join" />
<property name="batch" column = "batch" />
</class>
</hibernate-mapping>

